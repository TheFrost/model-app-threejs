@import 'slider';

html, body {
	margin: 0;
	padding: 0;
	width: 100vw;
	height: 100vh;
	overflow: hidden;

	background-color rgb(251, 251, 251)
}

#c {
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	z-index 1
}

.slider {
	position relative
	z-index 10
	&__item {
		width 100vw
		height 100vh

		background-color red
	}

	&__ctrl {
		position absolute
		top 50%
		z-index 10

		display block
		width 50px
		height 50px
		margin-top -25px

		background-color blue

		&.next {
			right 16px	
		}
		&.prev {
			left 16px	
		}
	}
}

.view {
	&__wrap {
		display flex
		justify-content center
		align-items center
		width 100%
		height 100%
	}
	&__scene {
		width 500px
		height 500px

		// background-color red
	}
}